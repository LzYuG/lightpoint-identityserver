@page "/Device"
@namespace LightPoint.IdentityServer.Razor.Pages.Accounts
@using LightPoint.IdentityServer.Blazor.Pages.IdentityServerBusiness.Device
@using LightPoint.IdentityServer.Blazor.Pages.RazorPages.Device
@model DevicePageModel

@using Microsoft.AspNetCore.Components.Web
@using LightPoint.IdentityServer.Blazor.Pages.IdentityServerBusiness.Accounts
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    string title = IdentityServer.Shared.Helpers.PageConstants.MainApplicationName;
    string ico = IdentityServer.Shared.Helpers.PageConstants.Favicon;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="_content/LightPoint.IdentityServer.Blazor/css/bootstrap/bootstrap.min.css" />
    <link href="_content/LightPoint.IdentityServer.Blazor/css/site.css" rel="stylesheet" />
    <link href="LightPoint.IdentityServer.QuickStart.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="@ico" />
    <link href="_content/AntDesign/css/ant-design-blazor.css" rel="stylesheet">
    <script src="_content/AntDesign/js/ant-design-blazor.js"></script>

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component param-AntiForgeryToken="@Model.AntiForgeryToken" type="typeof(Device)" render-mode="ServerPrerendered" />

    <script src="_framework/blazor.server.js" autostart="false"></script>
    <script src="/boot.js"></script>
</body>
</html>